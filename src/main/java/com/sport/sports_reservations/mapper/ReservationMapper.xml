<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
    PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
    "http://mybatis.org/dtd/mybatis-3-mapper.dtd">


<mapper namespace="com.sport.sports_reservations.mapper.ReservationMapper">

    
    <resultMap id="CitiesResultMap" type="com.sport.sports_reservations.booking.model.CityDTO">
        <id property="cityId" column="city_id"/>
        <result property="cityName" column="city_name"/>
    </resultMap>
    
    <resultMap id="SportsResultMap" type="com.sport.sports_reservations.booking.model.SportDTO">
        <id property="id" column="id"/>
        <result property="sportName" column="sport_name"/>
        <result property="maxPlayers" column="max_players"/>
    </resultMap>
	
	<select id="findAll" resultType="com.sport.sports_reservations.booking.model.ReservationDTO">
        SELECT * FROM reservations
    </select>
    
    <select id="findById" resultType="com.sport.sports_reservations.booking.model.ReservationDTO">
        SELECT * FROM reservations WHERE id = #{id}
    </select>

	<insert id="insert" parameterType="com.sport.sports_reservations.booking.model.ReservationDTO" useGeneratedKeys="true" keyProperty="id">
        INSERT INTO reservations 
        	(facility_id, 
        	user_id, 
        	date, 
        	hour, 
        	status)
        VALUES 
        	(#{facility.id}, 
        	#{user.id}, 
        	#{date}, 
        	#{hour}, 
        	#{status}
        )
     </insert>
    
    <update id="update" parameterType="com.sport.sports_reservations.booking.model.ReservationDTO">
        UPDATE reservations
        SET facility_id = #{facility.id},
            user_id = #{user.id},
            date = #{date},
            hour = #{hour},
            status = #{status}
        WHERE id = #{id}
    </update>

	<delete id="delete" parameterType="int">
        DELETE FROM reservations WHERE id = #{id}
    </delete>
    
    <select id="findSportsByCityId" resultMap="SportsResultMap">
        SELECT 
        	s.id, 
        	s.sport_name, 
        	s.max_players
        FROM sports s
        JOIN city_sports cs ON cs.sport_id = s.id
        WHERE cs.city_id = #{cityId}
   	</select>
    
    <select id="findAllCities" resultMap="CitiesResultMap">
    	SELECT 
    		city_id,
    		city_name 
    	FROM cities
    </select>
    
    <select id="findCitiesByUserId" resultMap="CitiesResultMap">
        SELECT DISTINCT 
        	c.city_id, 
        	c.city_name
        FROM cities c
        LEFT JOIN user_cities uc ON uc.city_id = c.city_id
        WHERE c.public_access = true OR uc.user_id = #{userId}
    </select>

</mapper>